---
import { SEO } from "astro-seo";
import "../styles/global.css";
import Navbar from "../components/navbar.astro";
import Footer from "../components/Footer.astro";
import Wangambang from "../components/wangambang.astro";


// Mengambil props titlemeta dan descriptionmeta dari halaman
const {
  titlemeta = "Refill APAR Bogor ",
  descriptionmeta = "REFILL APARMU SEKARANG - Berkualitas, Bergaransi, & Berpengalaman.",
  imagemeta = "/favicon.png", // Set default image jika tidak ada gambar
} = Astro.props;

const siteURL = new URL("https://refillaparbogor.dokterfire.com/"); // Ganti dengan URL situs Anda
const imageURL = new URL(imagemeta, siteURL); // Properti gambar OpenGraph menggunakan URL yang valid
const twitterHandle = "@Dokterfire"; // Ganti dengan username Twitter Anda
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO optimization menggunakan astro-seo -->
    <SEO
      title={titlemeta}
      description={descriptionmeta}
      canonical={siteURL.href}
      openGraph={{
        basic: {
          title: titlemeta,
          type: "website",
          image: imageURL.href, // Gunakan URL gambar yang telah diproses
          url: siteURL.href,
        },
        image: {
          url: imageURL.href, // URL gambar default atau custom
          alt: "REFILL APAR Bogor OpenGraph Image", // Alt text gambar
          width: 1200, // Lebar gambar OG
          height: 630, // Tinggi gambar OG
        },
      }}
      twitter={{
        card: "summary_large_image", // Menggunakan gambar besar untuk Twitter Card
        creator: twitterHandle,
        image: imageURL.href, // URL gambar default atau custom
      }}
      extend={{
        // Menambahkan favicon
        link: [{ rel: "icon", href: "/favicon.png", type: "image/png" }],
        // Menambahkan meta tambahan
        meta: [
          { name: "author", content: "Dokterfire - Refill APAR Bogor Terpercaya" },
          {
            name: "keywords",
            content:
              "refill apar bogor, isi ulang apar bogor, service apar bogor, refil apar terdekat bogor, jual apar bogor, alat pemadam api bogor, tabung pemadam bogor, apar powder bogor, apar co2 bogor, apar foam bogor, maintenance apar bogor, harga refill apar bogor, dokterfire bogor, refill apar murah bogor, apar bergaransi bogor, refill apar berkualitas bogor, isi ulang tabung pemadam bogor, service alat pemadam bogor, refill fire extinguisher bogor",
          },
          { name: "robots", content: "index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" },
          { name: "googlebot", content: "index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" },
          { name: "bingbot", content: "index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" },
          { name: "geo.region", content: "ID-JK" },
          { name: "geo.placename", content: "Bogor" },
          { name: "geo.position", content: "-6.2088;106.8456" },
          { name: "ICBM", content: "-6.2088, 106.8456" },
          { name: "language", content: "id" },
          { name: "revisit-after", content: "1 days" },
          { property: "business:contact_data:locality", content: "Bogor" },
          { property: "business:contact_data:region", content: "Jawa Barat" },
          { property: "business:contact_data:country_name", content: "Indonesia" },
          { name: "twitter:site", content: twitterHandle },
          { name: "twitter:image", content: new URL(imageURL, siteURL).href }, // Menggunakan URL objek yang valid untuk Twitter
        ],
      }}
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@200;400;600;700&display=swap"
      rel="stylesheet"
    />
<!--Sitemap -->
