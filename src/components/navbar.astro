---
import { Image } from "astro:assets";
import favicon from "../assets/favicon.png";
const refilapar="Refill APAR Bogor"
---
<nav class="bg-white border-gray-200 z-50">
  <div class="flex flex-wrap items-center justify-between max-w-screen-xl mx-auto p-4">
    <!-- Logo -->
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <Image
        src={favicon}
        alt="Tigris Logo"
        width={150}
        quality={90}
        height={130}
        class="h-16 w-20"
        loading="lazy"
      />
    </a>

   
    <div class="flex-1 text-center">
      <h1 class="font-extrabold text-lg sm:text-xl md:text-2xl text-gray-900 tracking-wide uppercase">
       {refilapar}
      </h1>
    </div>

    <!-- Right Side: Button with Modern Styling -->
    <div class="flex items-center md:order-2 space-x-1 md:space-x-2 rtl:space-x-reverse">
      <a
  href="https://wa.me/62811842909?text=Hallo%20Dokterfire,%20Saya%20Mau%20Refill%20APAR"
        class="text-white bg-gradient-to-r from-red-600 to-red-700 hover:from-red-500 hover:to-red-600 focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5 shadow-lg hover:shadow-xl transition-all duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-offset-2"
      >
        Buat Penawaran
      </a>
    </div>
  </div>
</nav>

