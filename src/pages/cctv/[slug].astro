---
import BaseLayout from "../../layouts/BaseLayout.astro";

import { contentfulClient } from "../../lib/contentful";
import type { Produkcctv } from "../../lib/contentful";
import { marked } from "marked";

// Ambil semua paths untuk halaman dynamic
export async function getStaticPaths() {
  const entries = await contentfulClient.getEntries<Produkcctv>({
    content_type: "produkcctv",
  });

  return entries.items.map((item) => ({
    params: { slug: item.fields.slug },
  }));
}

// Ambil parameter slug dari URL
const { slug } = Astro.params;

// Ambil data produk dari Contentful berdasarkan slug
const entries = await contentfulClient.getEntries<Produkcctv>({
  content_type: "produkcctv",
  "fields.slug": slug,
  include: 2, // Memastikan assets ikut diambil
});

// Jika produk tidak ditemukan
if (!entries.items.length) {
  throw new Error("Produkcctv not found");
}

const produkcctv = entries.items[0].fields;
const galleryImages = Array.isArray(produkcctv.image)
  ? produkcctv.image
  : [produkcctv.image];

// Ambil URL untuk gambar utama dan imagespek
const mainImageUrl =
  galleryImages[0]?.fields?.file?.url || "/logo rumahapi.webp"; // Gambar utama
const imagespekUrl =
  produkcctv.imagespek &&
  "fields" in produkcctv.imagespek &&
  produkcctv.imagespek.fields.file?.url
    ? produkcctv.imagespek.fields.file.url
    : "/default-spec-image.png";

// Debugging: Tampilkan URL gambar imagespek di console
console.log("Main Image URL:", mainImageUrl);
console.log("Imagespek URL:", imagespekUrl);

// Konversi spesifikasi dari markdown ke HTML
const contentHtml = marked(produkcctv.spesifikasi.toString());

import { Image } from "astro:assets";
import Bandara from "../../assets/lokasiumum/Bandara.png";
import Bioskop from "../../assets/lokasiumum/Bioskop.png";
import BussinesCenterMall from "../../assets/lokasiumum/Bussines Center_Malll.png";
import GudangLogistik from "../../assets/lokasiumum/Gudang Logistik.png";
import Museum from "../../assets/lokasiumum/Museum.png";
import Perusahaan from "../../assets/lokasiumum/Perusahaan.png";
import Stasiun from "../../assets/lokasiumum/Stasiun.png";
import Supermarket from "../../assets/lokasiumum/Supermarket.png";
import Terminal from "../../assets/lokasiumum/Terminal.png";
import CTAWaterjet from "../../assets/lokasiumum/CTA Waterjet.webp";
import SystemoverviewCCTVFirewater from "../../assets/lokasiumum/systemoverview cctvfirerwater.webp";
---

<BaseLayout>
  <!-- Container utama -->
  <div class="bg-gray-100 py-12">
    <div class="container mx-auto px-4 md:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        <!-- Galeri Produk -->
        <div class="flex flex-col items-center md:p-28 md:pt-7">
          <!-- Gambar Utama -->
          <div class="mb-4 w-full">
            <img
              id="mainImage"
              src={mainImageUrl}
              alt={produkcctv.title}
              class="w-full h-auto rounded-lg shadow-lg"
            />
          </div>

          <!-- Thumbnail Galeri -->
          <div class="grid grid-cols-4 gap-4">
            {
              galleryImages.map((image, index) => (
                <img
                  src={image.fields.file.url}
                  alt={`Thumbnail ${index + 1}`}
                  class="h-20 w-20 object-cover rounded-md cursor-pointer opacity-60 hover:opacity-100 transition-opacity duration-300"
                  data-image={image.fields.file.url}
                />
              ))
            }
          </div>
        </div>

        <!-- Detail Produk -->
        <div class="flex flex-col justify-between md:p-28 md:pt-7">
          <div>
            <h2
              class="produkcctv-title text-4xl font-bold mb-4 text-gray-800 md:pt-14">
              {produkcctv.title}
            </h2>
            <h3 class="text-lg font-semibold mb-3">Features</h3>
            <div class="text-md text-gray-700 mb-6 leading-relaxed">
              <div set:html={contentHtml} />
            </div>

            <!-- Tombol Beli -->
            <!-- Tombol Beli -->
            <a href="https://wa.me/6281382529368?text=" class="whatsapp-button"
              >Pesan Produk Ini</a
            >

            <style>
              .whatsapp-button {
                display: inline-block;
                padding: 10px 20px;
                background: linear-gradient(
                  45deg,
                  #1201d4,
                  #1125ff
                ); /* Gradien merah */
                color: white;
                text-decoration: none;
                border-radius: 50px; /* Membuat tombol berbentuk oval */
                font-size: 18px;
                font-weight: bold;
                text-align: center;
                box-shadow: 0px 6px 8px rgba(0, 0, 0, 0.2); /* Efek bayangan */
                transition:
                  background 0.3s ease,
                  transform 0.3s ease,
                  color 0.3s ease; /* Transisi pada warna dan transformasi */
              }
              .whatsapp-button:hover {
                background: linear-gradient(
                  45deg,
                  #3835ff,
                  #2300e6
                ); /* Gradien merah yang lebih terang saat hover */
                transform: translateY(-5px); /* Efek hover dengan gerakan */
                color: #dbd4fb; /* Warna teks saat hover, lebih soft (light pink) */
              }
            </style>

            <script>
              document.addEventListener("DOMContentLoaded", function () {
                // Ambil elemen <h2> yang berisi nama produk (menggunakan kelas .produkcctv-title)
                var produkcctvTitleElement = document.querySelector(
                  ".produkcctv-title"
                ) as HTMLHeadingElement;

                // Pastikan elemen produkcctvTitleElement tidak null sebelum mengakses innerText
                var produkcctvTitle = produkcctvTitleElement
                  ? produkcctvTitleElement.innerText
                  : "Produk";

                // Tangkap URL halaman saat ini
                var pageURL = window.location.href;

                // Teks pesan dinamis yang diinginkan
                var message =
                  "Hallo Tigrisfire, Saya Mau Pesan Produk " +
                  produkcctvTitle +
                  " di " +
                  pageURL;

                // Dapatkan elemen tombol WhatsApp, dengan memastikan bahwa elemen yang diambil adalah anchor
                var whatsappButton = document.querySelector(
                  ".whatsapp-button"
                ) as HTMLAnchorElement;

                // Pastikan whatsappButton bukan null sebelum mengakses href
                if (whatsappButton) {
                  // Tambahkan pesan dinamis ke URL WhatsApp (judul bersih, URL diencode)
                  whatsappButton.href += encodeURIComponent(message);
                } else {
                  console.error("WhatsApp button not found!");
                }
              });
            </script>
          </div>
        </div>
      </div>
    </div>

    <!-- Tambahkan gambar dari imagespek -->
    <div class="mt-20 md:mt-6">
      <h3 class="text-md md:text-3xl text-center font-extrabold">
        SPESIFIKASI
      </h3>
      <img
        class="flex w-full object-contain rounded-lg p-2 md:px-40 mt-5"
        src={imagespekUrl}
        alt="Imagespek"
      />
    </div>
  </div>

  <!-- Tambahkan script untuk slider -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const mainImage = document.getElementById(
        "mainImage"
      ) as HTMLImageElement;
      if (!mainImage) {
        console.error("Main image element not found");
        return;
      }

      const thumbnails = document.querySelectorAll(
        "[data-image]"
      ) as NodeListOf<HTMLImageElement>;

      thumbnails.forEach((thumbnail) => {
        thumbnail.addEventListener("click", function () {
          const newImageUrl = thumbnail.getAttribute("data-image");
          if (newImageUrl) {
            mainImage.src = newImageUrl;
          }
        });
      });
    });
  </script>

  <!--Intrudoction -->
  <section
    class="relative overflow-hidden bg-gradient-to-b from-blue-50 via-transparent to-transparent pb-12 pt-20 sm:pb-16 sm:pt-32 lg:pb-24 xl:pb-32 xl:pt-40">
    <div class="relative z-10">
      <div
        class="absolute inset-x-0 top-1/2 -z-10 flex -translate-y-1/2 justify-center overflow-hidden [mask-image:radial-gradient(50%_45%_at_50%_55%,white,transparent)]">
        <svg
          class="h-[60rem] w-[100rem] flex-none stroke-blue-600 opacity-20"
          aria-hidden="true">
          <defs>
            <pattern
              id="pattern"
              width="200"
              height="200"
              x="50%"
              y="50%"
              patternUnits="userSpaceOnUse"
              patternTransform="translate(-100 0)">
              <path d="M.5 200V.5H200" fill="none"></path>
            </pattern>
          </defs>
          <svg x="50%" y="50%" class="overflow-visible fill-blue-50">
            <path
              d="M-300 0h201v201h-201Z M300 200h201v201h-201Z"
              stroke-width="0"></path>
          </svg>
          <rect
            width="100%"
            height="100%"
            stroke-width="0"
            fill="url(#pattern)">
          </rect>
        </svg>
      </div>
    </div>
    <div class="relative z-20 mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
          AUTOMATIC TRACKING
          <span class="text-blue-600">AND AIMING JET </span>FIRE EXTINGUISHING
          DEVICE
        </h1>
        <h2 class="mt-6 text-lg leading-8 text-gray-600">
          Cutting-edge technology that ensures fast, reliable, and safe fire
          extinguishing in large spaces with the highest precision.
        </h2>
      </div>
      <div class="relative mx-auto mt-10 max-w-4xl">

        <Image src={SystemoverviewCCTVFirewater} alt="Systemoverview CCTV Firewater" class="w-full rounded-2xl border border-gray-100 shadow" />
      </div>
      <p class="text-lg text-gray-800 font-bold mt-2 text-center">
        image/System Overview
      </p>
    </div>
  </section>

  <!-- System Introduction Section -->
  <section
    class="relative z-20 mx-auto max-w-7xl px-2 lg:px-8 py-12 bg-white shadow-lg rounded-lg hover:shadow-2xl transition-shadow duration-500">
    <div
      class="mx-auto max-w-3xl p-8 border border-blue-100 rounded-lg bg-gradient-to-br from-white to-blue-50 relative">
      <div class="absolute inset-0 pointer-events-none">
        <div class="bg-blue-50 opacity-50 rounded-lg inset-0 w-full h-full">
        </div>
      </div>
      <div class="relative z-10">
        <h2
          class="text-4xl font-semibold text-blue-600 mb-8 border-b-4 border-blue-500 inline-block pb-2">
          System Introduction
        </h2>
        <p class="text-lg leading-8 text-gray-800 font-bold mt-4">
          Background Introduction
        </p>
        <p class="text-base text-gray-600 mt-4 border-l-4 border-blue-500 pl-4">
          With the continuous acceleration of the modernization process and the
          continuous diversification of building types, building fire protection
          construction is facing an arduous task. Dahua devotes itself to
          research and development, always focusing on the field of firefighting
          IoT and security, and constantly pursuing mature and stable
          firefighting products to ensure rapid early warning when a fire occurs
          and provide all-round protection for the safety of people's lives and
          property.
        </p>

        <p class="text-lg leading-8 text-gray-800 font-bold mt-8">
          System Introduction
        </p>
        <p class="text-base text-gray-600 mt-4 border-l-4 border-blue-500 pl-4">
          The automatic tracking and aiming jet fire extinguishing system
          consists of components such as detector, control panel, fire
          extinguishing module, simulated terminal water testing devices, as
          well as pipes, valves, and water supply module. The system is designed
          for large spaces or spaces that easily raise blazes. With large flow
          and high water pressure, our system can quickly aim at the root of the
          fire and break off the kindling from the fire to abort it.
        </p>
      </div>
    </div>
  </section>

  <!--tempat bisa -->
  <section class="md:px-40 text-center mt-20 mb-11">
    <p
      class="text-4xl font-semibold text-blue-600 mb-8 border-b-4 border-blue-500 inline-block pb-2">
      Penggunaan Umum
    </p>
    <p>
      Penggunaan di berbagai tempat seperti bandara, stasiun, pusat
      perbelanjaan, bioskop, museum, gudang, dan pusat distribusi untuk
      memastikan keamanan dan manajemen perlindungan kebakaran yang optimal.
    </p>
    <div class="grid grid-cols-3 md:grid-cols-3 gap-4 mt-10 md:px-40 p-1">
      <div>
        <Image
          src={Bandara}
          alt="Bandara"
          class="h-auto max-w-full rounded-lg"
        />
      </div>
      <div>
        <Image
          src={Bioskop}
          alt="Bioskop"
          class="h-auto max-w-full rounded-lg"
        />
      </div>
      <div>
        <Image
          src={BussinesCenterMall}
          alt="Business Center Mall"
          class="h-auto max-w-full rounded-lg"
        />
      </div>
      <div>
        <Image
          src={GudangLogistik}
          alt="Gudang Logistik"
          class="h-auto max-w-full rounded-lg"
        />
      </div>
      <div>
        <Image src={Museum} alt="Museum" class="h-auto max-w-full rounded-lg" />
      </div>
      <div>
        <Image
          src={Perusahaan}
          alt="Perusahaan"
          class="h-auto max-w-full rounded-lg"
        />
      </div>
      <div>
        <Image
          src={Stasiun}
          alt="Stasiun"
          class="h-auto max-w-full rounded-lg"
        />
      </div>
      <div>
        <Image
          src={Supermarket}
          alt="Supermarket"
          class="h-auto max-w-full rounded-lg"
        />
      </div>
      <div>
        <Image
          src={Terminal}
          alt="Terminal"
          class="h-auto max-w-full rounded-lg"
        />
      </div>
    </div>
  </section>

  <section class="bg-gray-50 py-16 mt-">
    <div class="container mx-auto px-6 lg:px-8">
      <!-- CTA Content -->
      <div class="text-center">
        <h2 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
          Protect Your Facility with Advanced Fire Extinguishing Technology
        </h2>
        <p class="mt-6 text-lg text-gray-600 leading-8">
          Discover the cutting-edge solution for rapid fire suppression with our
          Automatic Tracking and Aiming Jet Fire Extinguishing Device.
        </p>
        <div class="mt-8">
          <a
            href="https://wa.me/6287787500580?text="
            class="whatsapp-Cta inline-flex items-center px-8 py-3 text-lg font-semibold text-white bg-blue-600 rounded-full shadow-lg hover:bg-blue-500 transition-all duration-300 focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">
            Pesan Sekarang
          </a>
          <script>
            document.addEventListener("DOMContentLoaded", function () {
              // Ambil elemen <h2> yang berisi nama produk (menggunakan kelas .produkcctv-title)
              var produkcctvTitleElement = document.querySelector(
                ".produkcctv-title"
              ) as HTMLHeadingElement;

              // Pastikan elemen produkcctvTitleElement tidak null sebelum mengakses innerText
              var produkcctvTitle = produkcctvTitleElement
                ? produkcctvTitleElement.innerText
                : "Produk";

              // Tangkap URL halaman saat ini
              var pageURL = window.location.href;

              // Teks pesan dinamis yang diinginkan
              var message =
                "Hallo Tigrisfire, Saya Mau Konsultasi " +
                produkcctvTitle +
                " yang di " +
                pageURL;

              // Dapatkan elemen tombol WhatsApp, dengan memastikan bahwa elemen yang diambil adalah anchor
              var whatsappCta = document.querySelector(
                ".whatsapp-Cta"
              ) as HTMLAnchorElement;

              // Pastikan whatsappButton bukan null sebelum mengakses href
              if (whatsappCta) {
                // Tambahkan pesan dinamis ke URL WhatsApp (judul bersih, URL diencode)
                whatsappCta.href += encodeURIComponent(message);
              } else {
                console.error("WhatsApp button not found!");
              }
            });
          </script>
        </div>
      </div>

      <!-- CTA Image -->
      <div
        class="relative mx-auto mt-10 max-w-4xl rounded-2xl overflow-hidden shadow-lg">
        <Image
          src={CTAWaterjet}
          alt="systemwaterjet"
          class="w-full h-auto transform hover:scale-105 transition duration-500 ease-in-out"
        />
      </div>
    </div>
  </section>
</BaseLayout>
