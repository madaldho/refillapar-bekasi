---
import BaseLayout from "../layouts/BaseLayout.astro";
import Heropagetitle from "../components/heropagetitle.astro";
import { Image } from "astro:assets";

const {
  titlemeta = "Hubungi Kami",
  descriptionmeta = "AMANKAN ASSET BERHARGAMU DI MASA DEPAN DENGAN KAMI AHLINYA",
  pagetitle = "Produk Robot Fire",
} = Astro.props;

const product1Image =
  "https://material.dahuasecurity.com/uploads/image/20201211/TPC-SD8421-T-2_thumb.png";
const product2Image =
  "https://material.dahuasecurity.com/uploads/image/20190626/TPC-BF8421_Image_thumb.png";
---

<BaseLayout titlemeta={titlemeta} descriptionmeta={descriptionmeta}>
  <Heropagetitle pagetitle={pagetitle} />
  
  <!-- Product Cards Wrapper -->
  <div class="flex flex-wrap justify-center gap-8 my-8">
    
    <!-- First Card -->
    <div class="relative flex flex-col bg-white shadow-lg border border-slate-200 rounded-2xl w-96 hover:scale-105 transition-transform duration-300">
      <div class="relative p-3 h-96 overflow-hidden rounded-xl bg-clip-border">
        <Image
          src={product1Image}
          alt="product-image-1"
          class="h-full w-full object-cover rounded-2xl transition-transform duration-300 hover:scale-110"
          format="webp"
          width={400}
          height={400}
        />
      </div>
      <div class="p-5">
        <div class="mb-4">
          <p class="text-slate-800 text-xl font-semibold">Product 1</p>
        </div>
        <p class="text-slate-600 leading-normal font-light mb-4">
          This is a fantastic product with amazing features. Perfect for modern use.
        </p>
        <a
          href="/robotfire"
          class="rounded-full w-full bg-red-600 py-3 px-4 border border-transparent text-center text-sm text-white transition-all shadow-md hover:shadow-lg hover:bg-red-700 focus:bg-red-700 focus:shadow-none active:bg-red-700 active:shadow-none hover:scale-105"
          role="button">
          Lihat Detail
        </a>
      </div>
    </div>

    <!-- Second Card -->
    <div class="relative flex flex-col bg-white shadow-lg border border-slate-200 rounded-2xl w-96 hover:scale-105 transition-transform duration-300">
      <div class="relative p-3 h-96 overflow-hidden rounded-xl bg-clip-border">
        <Image
          src={product2Image}
          alt="product-image-2"
          class="h-full w-full object-cover rounded-2xl transition-transform duration-300 hover:scale-110"
          format="webp"
          width={400}
          height={400}
        />
      </div>
      <div class="p-5">
        <div class="mb-4">
          <p class="text-slate-800 text-xl font-semibold">Product 2</p>
        </div>
        <p class="text-slate-600 leading-normal font-light mb-4">
          Experience the ultimate quality and technology with this modern device.
        </p>
        <a
          href="/robotfire"
          class="rounded-full w-full bg-red-600 py-3 px-4 border border-transparent text-center text-sm text-white transition-all shadow-md hover:shadow-lg hover:bg-red-700 focus:bg-red-700 focus:shadow-none active:bg-red-700 active:shadow-none hover:scale-105"
          role="button">
          Lihat Detail
        </a>
      </div>
    </div>

  </div>
</BaseLayout>
