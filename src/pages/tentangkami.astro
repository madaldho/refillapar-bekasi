---
import BaseLayout from "../layouts/BaseLayout.astro";
import Heropagetitle from "../components/heropagetitle.astro";

  
const {
  titlemeta = "Layanan Proteksi Kebakaran Tangguh-Tentang Kami",
  descriptionmeta = "Perlindungan Terbaik Untuk Masa Depan Aset Berharga Anda",
  pagetitle = "Tentang Kami",
  pagesubtitle = "Kami berkomitmen untuk menjaga keselamatan Anda dengan teknologi mutakhir dan tim ahli yang berdedikasi tinggi.",
} = Astro.props;
---

<BaseLayout titlemeta={titlemeta} descriptionmeta={descriptionmeta}>
  <Heropagetitle pagetitle={pagetitle} pagesubtitle={pagesubtitle}/>

  <section class="relative py-16 bg-gray-50">
  <!-- Content -->
  <div class="container mx-auto px-6 md:px-12 lg:px-16 text-gray-900">


    <!-- Values Section -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <!-- Vision Card -->
      <div
        class="p-6 bg-white rounded-xl shadow-lg transition-all duration-500 hover:shadow-2xl hover:scale-105 transform hover:-translate-y-2">
        <h3 class="text-3xl font-bold text-blue-600 mb-4">Visi Kami</h3>
        <p class="text-lg leading-relaxed text-gray-700">
          Menjadi pelopor dalam solusi proteksi kebakaran yang inovatif dan mudah diakses, memberikan keamanan maksimal.
        </p>
        <div class="absolute inset-x-0 bottom-0 left-0 right-0 opacity-10 bg-blue-600 h-2 rounded-b-xl"></div>
      </div>

      <!-- Mission Card -->
      <div
        class="p-6 bg-white rounded-xl shadow-lg transition-all duration-500 hover:shadow-2xl hover:scale-105 transform hover:-translate-y-2">
        <h3 class="text-3xl font-bold text-blue-600 mb-4">Misi Kami</h3>
        <ul class="list-disc list-inside text-lg space-y-3 leading-relaxed text-gray-700">
          <li>Menyediakan layanan unggulan bagi semua klien kami.</li>
          <li>Mengembangkan teknologi perlindungan kebakaran yang inovatif.</li>
          <li>Menciptakan lingkungan yang aman melalui edukasi dan pencegahan.</li>
        </ul>
        <div class="absolute inset-x-0 bottom-0 left-0 right-0 opacity-10 bg-blue-600 h-2 rounded-b-xl"></div>
      </div>
    </div>
  </div>
</section>

<!-- Sejarah Kami -->
<section class="relative py-16 bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700">
  <!-- Content -->
  <div class="container mx-auto px-6 md:px-12 lg:px-16 text-white">
    <!-- History Section -->
    <div class="text-center">
      <h3 class="text-4xl font-extrabold text-white mb-8">Sejarah Kami</h3>
      <p class="text-lg max-w-3xl mx-auto leading-relaxed text-white">
        Didirikan pada tahun 2008, Tigrisfire telah menjadi pemimpin dalam industri proteksi kebakaran, menyediakan solusi aman dan efektif untuk individu, bisnis, dan masyarakat di seluruh Indonesia.
      </p>
    </div>

    
  </div>
</section>


  <!-- Keyframe for Floating Animation -->
  <style>
    @keyframes float {
      0% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-20px);
      }
      100% {
        transform: translateY(0px);
      }
    }

    .animate-float-slow {
      animation: float 8s ease-in-out infinite;
    }
  </style>

  <!--Layanan Kami -->
  <section class="text-gray-900 bg-white py-16">
    <div class="container mx-auto text-center p-2 md:px-20">
      <h2 class="text-3xl font-bold text-gray-800 mb-8">Layanan Kami</h2>
      <p class="text-gray-600 mb-12 px-3 md:px-28">
        Kami menyediakan berbagai layanan untuk memastikan proteksi kebakaran
        yang optimal bagi aset Anda.
      </p>

      <!-- Grid of Services -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 px-4">
        <!-- Service 1: Maintenance -->
        <div
          class="p-6 bg-white shadow-lg rounded-lg hover:bg-gray-50 transition duration-300">
          <div class="w-16 h-16 mx-auto mb-4 text-green-600">
            <!-- Maintenance Icon -->
            <img
              src="/icontentanglayanan/maintence.webp"
              alt="maintence"
              class=""
            />
          </div>
          <h3 class="text-lg font-semibold text-gray-800">Maintenance</h3>
          <p class="mt-2 text-gray-600">
            Pemeliharaan berkala untuk memastikan sistem proteksi Anda tetap
            bekerja optimal.
          </p>
        </div>

        <!-- Service 2: Inspeksi APAR Gratis -->
        <div
          class="p-6 bg-white shadow-lg rounded-lg hover:bg-gray-50 transition duration-300">
          <div class="w-16 h-16 mx-auto mb-4 text-blue-600">
            <!-- Inspection Icon -->
            <img src="/icontentanglayanan/cek apar.webp" alt="inspeksi icon" />
          </div>
          <h3 class="text-lg font-semibold text-gray-800">
            Inspeksi APAR Gratis
          </h3>
          <p class="mt-2 text-gray-600">
            Layanan pemeriksaan alat pemadam api ringan secara cuma-cuma untuk
            memastikan keamanan.
          </p>
        </div>

        <!-- Service 3: On-site Refill -->
        <div
          class="p-6 bg-white shadow-lg rounded-lg hover:bg-gray-50 transition duration-300">
          <div class="w-16 h-16 mx-auto mb-4 text-yellow-600">
            <!-- Refill Icon -->
            <img src="/icontentanglayanan/refil apar.webp" alt="refil icon" />
          </div>
          <h3 class="text-lg font-semibold text-gray-800">On-site Refill</h3>
          <p class="mt-2 text-gray-600">
            Pengisian ulang APAR di lokasi Anda dengan cepat dan efisien.
          </p>
        </div>

        <!-- Service 4: Fire Training -->
        <div
          class="p-6 bg-white shadow-lg rounded-lg hover:bg-gray-50 transition duration-300">
          <div class="w-16 h-16 mx-auto mb-4 text-blue-600">
            <!-- Training Icon -->
            <img src="/icontentanglayanan/training.webp" alt="training icon" />
          </div>
          <h3 class="text-lg font-semibold text-gray-800">Fire Training</h3>
          <p class="mt-2 text-gray-600">
            Pelatihan lengkap untuk karyawan dalam menangani potensi kebakaran
            di tempat kerja.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Tailwind Animations -->
  <style>
    @keyframes float {
      0% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-20px);
      }
      100% {
        transform: translateY(0px);
      }
    }

    @keyframes float-slow {
      0% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-10px);
      }
      100% {
        transform: translateY(0px);
      }
    }

    .animate-float {
      animation: float 6s ease-in-out infinite;
    }

    .animate-float-slow {
      animation: float-slow 10s ease-in-out infinite;
    }
  </style>

  <!--Swipper logo -->
  <section class="bg-gray-100 text-black py-8 shadow-md">
    <h2 class="text-center text-2xl mb-2 font-bold leading-8">
      Produk Andalan Tigrisfire
    </h2>
    <p class="text-center text-lg font-extralight leading-8 px-3 md:px-36">
      Tigrisfire menawarkan produk proteksi kebakaran berkualitas tinggi yang
      dirancang untuk ketahanan maksimal dan keandalan jangka panjang. Kami
      memastikan keamanan terbaik dengan teknologi terkini yang siap melindungi
      aset Anda.
    </p>

    <!-- Carousel container -->
    <div
      class="logos group relative overflow-hidden whitespace-nowrap py-10 [mask-image:_linear-gradient(to_right,_transparent_0,_white_128px,white_calc(100%-128px),_transparent_100%)]">
      <!-- First set of logos -->
      <!-- Loop pertama gambar-gambar mitra -->
      <div
        class="animate-slide-left-infinite group-hover:animation-pause inline-block w-max">
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/secutron.png"
          alt="secutron"
        />
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/notifier.png"
          alt="notifier"
        />
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/GuardALL.jpg"
          alt="guardall"
        />
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/hooseki.png"
          alt="hooseki"
        />
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/horing lih.png"
          alt="horing lih"
        />
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/nittan.png"
          alt="nittan"
        />
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/nohmi.png"
          alt="nohmi"
        />
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/hongchang.png"
          alt="hong chang"
        />
      </div>

      <!-- Loop kedua gambar-gambar mitra untuk efek infinite scroll -->
      <div
        class="animate-slide-left-infinite group-hover:animation-pause inline-block w-max">
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/secutron.png"
          alt="secutron"
        />
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/notifier.png"
          alt="notifier"
        />
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/GuardALL.jpg"
          alt="guardall"
        />
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/hooseki.png"
          alt="hooseki"
        />
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/horing lih.png"
          alt="horing lih"
        />
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/nittan.png"
          alt="nittan"
        />
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/nohmi.png"
          alt="nohmi"
        />
        <img
          class="mx-4 inline h-36"
          src="/logo firealarm/hongchang.png"
          alt="hong chang"
        />
      </div>
    </div>
  </section>

  <style>
    .swiper-button-next,
    .swiper-button-prev {
      color: #333; /* Ubah warna tombol navigasi */
    }
  </style>

  <!--Klient Terpercaya -->
  <section class="text-gray-900 bg-white py-16">
    <div class="container mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-800">Klien Terpercaya Kami</h2>
        <p class="mt-4 text-gray-600 px-10 md:px-36">
          Kami bangga telah bekerja sama dengan berbagai perusahaan terkemuka
          untuk menghadirkan solusi perlindungan kebakaran yang terbaik. Jadilah
          bagian dari mereka dan pastikan keamanan bisnis Anda bersama kami.
        </p>
      </div>

      <!-- Partners Logos -->
      <div
        class="grid grid-cols-3 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-8 items-center justify-center p-3">
        <img
          src="/mitra rumahapi/1.pertamina.webp"
          alt="Pertamina"
          class="h-16 mx-auto"
        />
        <img src="/mitra rumahapi/2.bi.webp" alt="BI" class="h-16 mx-auto" />
        <img
          src="/mitra rumahapi/3.kemenker.webp"
          alt="Kemenker"
          class="h-16 mx-auto"
        />
        <img
          src="/mitra rumahapi/4.telkom.webp"
          alt="Telkom"
          class="h-16 mx-auto"
        />
        <img
          src="/mitra rumahapi/5.pustekom.webp"
          alt="Pustekom"
          class="h-16 mx-auto"
        />
        <img src="/mitra rumahapi/6.lp.webp" alt="LP" class="h-16 mx-auto" />
        <img
          src="/mitra rumahapi/7.esar.webp"
          alt="Esar"
          class="h-16 mx-auto"
        />
        <img
          src="/mitra rumahapi/8.pt delta djakarta.webp"
          alt="PT Delta Djakarta"
          class="h-16 mx-auto"
        />
        <img
          src="/mitra rumahapi/9.mikie.webp"
          alt="Mikie"
          class="h-16 mx-auto"
        />
        <img
          src="/mitra rumahapi/10.oalkwood.webp"
          alt="Oalkwood"
          class="h-16 mx-auto"
        />
        <img
          src="/mitra rumahapi/11.indokomas.webp"
          alt="Indokomas"
          class="h-16 mx-auto"
        />
        <img
          src="/mitra rumahapi/12.deut bank.webp"
          alt="Deut Bank"
          class="h-16 mx-auto"
        />
        <img
          src="/mitra rumahapi/13.kominfo.webp"
          alt="Kominfo"
          class="h-16 mx-auto"
        />
        <img
          src="/mitra rumahapi/14.bank jateng.webp"
          alt="Bank Jateng"
          class="h-16 mx-auto"
        />
        <img src="/mitra rumahapi/15.lg.webp" alt="LG" class="h-16 mx-auto" />
      </div>
      <div>
        <img
          src="/mitra rumahapi/lebihdari100klient.webp"
          alt="100 klien lebih"
          class="w-full md:w-9/12 mx-auto mt-10"
        />
      </div>

      <!-- CTA Buttons -->
      <div class="flex justify-center mt-10 space-x-6">
        <a href="/portofolio" class="no-underline">
          <button
            class="px-6 py-2 bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 text-white rounded-lg shadow hover:bg-blue-800 transition-all duration-300 hover:shadow-lg transform hover:scale-105">
            Lihat Portofolio Klien
          </button>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
